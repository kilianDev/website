<div class="container">
    <div class="row title-contact">
        <div class="col-lg-12">
            <header class="section-header">
                <h2 class="section-title">
                    {{ 'contact.title'|trans }}
                </h2>
                <h3 class="section-subtitle">
                    {{ 'contact.subtitle'|trans|nl2br }}
                </h3>
            </header>
        </div>
    </div>
    <div class="row infos-contact">
        <div class="col-lg-3 col-md-3 col-sm-4 col-sm-6">
            <i class="fa fa-envelope fa-2x"></i><br/>
            {{ 'contact.infos.email'|trans }}
        </div>
        <div class="col-lg-3 col-md-3 col-sm-4 col-sm-6">
            <i class="fa fa-phone fa-2x"></i><br/>
            {{ 'contact.infos.phone'|trans }}
        </div>
        <div class="col-lg-3 col-md-3 col-sm-4 col-sm-6">
            <a href="https://www.linkedin.com/in/kiliandevouassoux/">
                <i class="fa fa-linkedin-square fa-2x"></i><br/>
                {{ 'contact.infos.linkedin'|trans }}
            </a>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-4 col-sm-6">
            <i class="fa fa-map-marker fa-2x"></i><br/>
            {{ 'contact.infos.location'|trans }}
        </div>
    </div>
</div>